<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".FourthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTodoTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TODO TASKS"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginTop="50sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/taskListId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">
            </LinearLayout>

        </ScrollView>

        <!-- "TODO DONE" sektion -->
        <LinearLayout
            android:id="@+id/doneListContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/textViewDoneTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TODO DONE"
                android:textSize="24sp"
                android:gravity="center"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/taskListDoneId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">
                </LinearLayout>


            </ScrollView>

        </LinearLayout>


    </LinearLayout>

    <!-- "+" knappen -->
    <Button
        android:id="@+id/buttonAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="25sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50sp" />

    <!-- Tilbage til menu knap -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/buttonNextPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to menu"/>

    </LinearLayout>

</RelativeLayout>
